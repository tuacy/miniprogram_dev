/* pages/navtabs/navtabs.wxss */

page {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

.contain {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.nav-tabs {
  width: 100%;
  height: 75rpx;
  display: flex;
}

.nav-content {
  flex: 1;
  background: #666666;
}

.nav-tabs__item__normal {
  line-height: 75rpx;
  text-align: center;
  flex: 1;
  border-bottom: 1px solid #eee;
  color: #000;
  font-weight: bold;
  font-size: 28rpx;
}

.nav-tabs__item__select {
  line-height: 75rpx;
  text-align: center;
  color: #fc5558;
  flex: 1;
  border-bottom: 1px solid red;
  font-weight: bold;
  font-size: 28rpx;
}

.show {
  display: block;
  flex: 1;
}

.hidden {
  display: none;
  flex: 1;
}
