/**index.wxss**/

page {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

.contain {
  box-sizing: border-box;
  width: 100%;
  min-height: 100vh;
  padding: 16px;
  background: #fff;
  display: flex;
  flex-direction: column;
}

.title {
  font-weight: normal;
  line-height: 1;
  user-select: none;
  text-align: center;
}

.content {
  flex: 1;
  width: 100%;
}

.content__item {
  margin: 12px 0 0;
  padding-left: 20px;
  color: #323233;
  font-weight: 500;
  font-size: 14px;
  line-height: 40px;
  background: #f7f8fa;
  border-radius: 99px;
  transition: background 0.3s;
}

.content__item:hover {
  background: darken(#f7f8fa, 3%);
}

.content__item:active {
  background: darken(#f7f8fa, 6%);
}
